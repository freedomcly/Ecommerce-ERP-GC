{
  "apps": {
      "name": "golden-cudgel-server",
      "script": "./bin/www",
      "cwd": "./",
      "interpreter": "",
      "interpreter_args": "",
      "watch": true,
      "ignore_watch": [
          "node_modules",
          "public"
      ],
      "exec_mode": "cluster_mode",
      "instances": "max",
      "max_memory_restart": "100M",
      "error_file": "./logs/app-err.log",
      "out_file": "./logs/app-out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "min_uptime": "60s",
      "max_restarts": 30,
      "autorestart": true,
      "restart_delay": "60"
  }
}
